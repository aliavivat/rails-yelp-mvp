<div class="container">
  <div class="card mb-3">
    <%= image_tag "http://source.unsplash.com/featured/?food#{@restaurant.name}>&#{rand(1000)}", class: "card-img-top"%>
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <p class="card-text"><%= @restaurant.address %></p>
      <p class="card-text"><small class="text-body-secondary"><%= @restaurant.phone_number %></small></p>
      <p><%= link_to 'Back', restaurants_path, class: 'btn btn-light'  %></p>
    </div>
  </div>
</div>
